function dprint(str,x,y,col)
 if (col==nil) col=7
 print(str,x+1,y+1,0)
 print(str,x,y+1,0)
 print(str,x,y,col)
end
function rect2(x,y,w,h,c)
 rect(x,y,x+w-1,y+h-1,c)
end
function rectfill2(x,y,w,h,c)
